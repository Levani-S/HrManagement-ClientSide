@model UserLoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="site.css">
</head>
<body class="body">
    <header class="flex-center header-bg">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <img src="https://www.freelogoservices.com/blog/wp-content/uploads/transparent-logo.jpg" alt="HRManagement Logo" class="logo"> Human Resources
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active sign-up submitBtn" href="/Accounts/RegistrationForm">Sign up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <form asp-controller="Accounts" asp-action="Login" method="post">
        <main class="fullsize">
            <section class="auth">
                <aside class="top">
                    <p class="hr-login-page">HR Login Page</p>
                </aside>
                <aside class="bottom">

                    <div class="form-group login">
                        <label for="nameInput" class="form-label">Username</label>
                        <input asp-for="UserName" name="UserName" class="form-control" type="text" placeholder="Enter your username" id="nameInput">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="passwordInput" class="form-label">Password</label>
                        <input asp-for="Password" name="Password" class="form-control" type="password" placeholder="Enter your password" id="passwordInput">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <button class="btn btn-primary" id="submitBtn">Log In</button>
                    </div>
                </aside>
            </section>
        </main>
    </form>
</body>
</html>