@using HRManagementClientSide.Enums
@using HRManagementClientSide.Models
@model (List<EmployeeModel>, EmployeeFilter)

@{
    ViewData["Title"] = "Employee List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <title>Employee List</title>
</head>
<body class="body1">
    <header>
    </header>
    <main>
        <div class="container mt-5">
            <h1 class="text-center mb-4">Employee List</h1>
            <form asp-controller="Employee" asp-action="EmployeeList" method="post" class="mb-4">
                <div class="input-group">
                    <select asp-for="Item2.PropertyType" asp-items="Html.GetEnumSelectList<FilteringEmployee>()" class="form-select">
                        <option selected disabled>Filter by...</option>
                    </select>
                    <input asp-for="Item2.PropertyValue" class="form-control" placeholder="Search...">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </form>
            <div class="register-form">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Identify Number</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Position</th>
                            <th>Status</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Birth Date</th>
                            <th>Release Date</th>
                        </tr>
                    </thead>
                    <thead>
                        <tr>
                            <th>Identify Number</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Position</th>
                            <th>Status</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Birth Date</th>
                            <th>Release Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Item1.Count() > 0)
                        {
                            foreach (var employee in Model.Item1)
                            {
                                <tr>
                                    <td>@employee.IdentifyNumber</td>
                                    <td>@employee.FirstName</td>
                                    <td>@employee.LastName</td>
                                    <td>@employee.Position</td>
                                    <td>@employee.Status</td>
                                    <td>@employee.Email</td>
                                    <td>@employee.PhoneNumber</td>
                                    <td>@employee.BirthDate</td>
                                    if(@employee.ReleaseDate != null){
                                    <td>@employee.ReleaseDate</td>
                                    }
                                    <form asp-controller="Account" asp-action="RemoveEmployee" method="post"> <input type=hidden value=@employee.Id name=id> <button type=submit>Delete</button> </form>
                                    <form asp-controller="Account" asp-action="EditEmployee" method="post"> <input type=hidden value=@employee.Id name=id> <button type=submit>Edit</button> </form>
                                    <form asp-controller="Account" asp-action="ViewEmployee" method="post"> <input type=hidden value=@employee.Id name=id> <button type=submit>View</button> </form>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>
    <footer>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
